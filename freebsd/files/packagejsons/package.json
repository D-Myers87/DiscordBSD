{
  "name": "DiscordBSD",
  "version": "1.0.0",
  "description": "",
  "main": "./build/main.js",
  "scripts": {
    "build": "mkdir -p build && copyfiles -u 1 \"src/titlebar/**/*\" \"build\" && tsc -p .",
    "run": "electron24 build/main.js",
    "postbuild": "copyfiles -u 1 \"src/assets/**/*\" \"build\"",
    "make": "npm run build && npm run postbuild && npm run run",
    "clean": "rm -r build/",
    "pack": "electron-builder -l"
  },
  "build": {
    "files": [
      "build/**/*",
      "package.json"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.4.2",
    "copyfiles": "^2.4.1",
    "electron": "^25.3.0",
    "electron-builder": "^24.4.0",
    "typescript": "^5.1.6"
  }
}
