{
  "name": "DiscordBSD",
  "version": "1.0.0",
  "description": "",
  "main": "./build/main.js",
  "scripts": {
    "build": "mkdir -p build && copyfiles -u 1 \"src/titlebar/**/*\" \"build\" && tsc -p .",
    "run": "electron27 build/main.js",
    "postbuild": "copyfiles -u 1 \"src/assets/**/*\" \"build\"",
    "make": "npm run build && npm run postbuild && npm run run",
    "clean": "rm -r build/",
    "pack": "electron-builder -l"
  },
  "build": {
    "files": [
      "build/**/*",
      "package.json"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.9.2",
    "copyfiles": "^2.4.1",
    "electron-builder": "^24.6.4",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "electron": "^27.1.0"
  }
}
